                <Button x:Name="improvement1Button" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Height="30"/>
                <Image Source = "Sources/test.png" x:Name="improvement1Image" HorizontalAlignment="Center" Height="95" VerticalAlignment="Top" Width="100"/>
            </Grid>
            <Grid x:Name="improvement2Grid" HorizontalAlignment="Left" Height="125" VerticalAlignment="Top" Width="100" Margin="157,191,0,-76" >
