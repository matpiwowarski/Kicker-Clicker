                    <ControlTemplate>
                        <Image Source="Sources/ball.png" />
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Label x:Name="ScoreLabel" Content="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="100" Width="792" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Microsoft YaHei" FontSize="36" RenderTransformOrigin="0.504,0" Margin="0,0,0,54"/>
            <Grid x:Name="improvement1Grid" HorizontalAlignment="Left" Height="125" VerticalAlignment="Top" Width="100" Margin="28,191,0,-76">
